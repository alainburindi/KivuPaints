<% include ../partials/navbar%> <% include ../partials/messages%>
<h3>Produits</h3>

<table class="table table-hover" id="myTable">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Amount</th>
      <th scope="col">Reason</th>
      <th scope="col">Cashier</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if(depenses[0]){ %> <% let i = 0;%> <%for(; i < depenses.length; i++){%>
    <tr class="table-<%= i % 2 == 0 ? 'light' : 'light' %>">
      <th scope="row"><%= depenses[i].requester%></th>
      <td><%= depenses[i].amount%></td>
      <td><%= depenses[i].reason%></td>
      <td><%= depenses[i].cashier%></td>
      <td>
        <a
          href="expenses/<%= depenses[i].id%>/edit"
          class="btn btn-outline-success align-items-center"
          ><i class="fa fa-edit"></i
        ></a>
        <a href="#" class="btn btn-outline-danger"
          ><i class="fa fa-trash"></i
        ></a>
      </td>
    </tr>
    <%} %> <%}else{%>
    <h2>No expense recorded</h2>
    <%}%>
  </tbody>
</table>
