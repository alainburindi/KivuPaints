<% include ../partials/navbar%> <% include ../partials/messages%>

<form
  class="form-horizontal"
  method="POST"
  action=" <%= typeof to != 'undefined' ? to : '/depenses' %>"
>
  <fieldset>
    <legend>Add a new expense</legend>
    <% include ../partials/messages%>
    <div class="form-group">
      <label class="col-lg-2 control-label">Requester</label>
      <div class="col-lg-10">
        <input
          name="requester"
          type="text"
          class="form-control"
          id=""
          placeholder="Requester's name"
          value="<%= typeof requester != 'undefined' ? requester : '' %>"
        />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label ml-3">Amount</label>
      <div class="input-group mb-3 col-lg-10">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input
          type="number"
          name="amount"
          class="form-control"
          aria-label=""
          min="0"
          step=".01"
          value="<%= typeof amount != 'undefined' ? amount : '' %>"
        />
        <div class="input-group-append">
          <span class="input-group-text">.00</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Reason</label>
      <div class="col-lg-10">
        <input
          type="text"
          name="reason"
          class="form-control"
          aria-label=""
          placeholder="Reason"
          value="<%= typeof reason != 'undefined' ? reason : '' %>"
        />
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>
