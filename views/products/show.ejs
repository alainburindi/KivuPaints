<% include ../partials/navbar%> <% include ../partials/messages%>
<h3>Produits</h3>

<table class="table table-hover" id="myTable">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Unite de mesure</th>
      <th scope="col">Prix par unite</th>
      <th scope="col">Detail</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if(products[0]){ %> <% let i = 0;%>
    <!-- <%for(let a = 0; a < 150; a++){%>  -->
    <%for(; i < products.length; i++){%>
    <tr class="table-<%= i % 2 == 0 ? 'secondary' : 'light' %>">
      <th scope="row"><%= products[i].name%></th>
      <td><%= products[i].unity%></td>
      <td><%= products[i].price%></td>
      <td width="500px"><%= products[i].detail%></td>

      <td>
        <a
          href="products/<%= products[i].id%>/edit"
          class="btn btn-outline-warning align-items-center"
          >edit</a
        >
        <p></p>
        <a href="#" class="btn btn-outline-danger">delete</a>
      </td>
    </tr>
    <%} %>
    <!-- <%i=0;%> <%} %>  -->
    <%}else{%>
    <h2>No product recorded</h2>
    <%}%>
  </tbody>
</table>
